<% if resource.is_a?(ActiveModel::Errors) && resource.any? %>
  <div id="error_explanation" data-turbo-cache="false">
    <h2>
      <%= I18n.t("errors.messages.not_saved",
                 count: resource.count,
                 resource: resource.model_name.human.downcase) %>
    </h2>
    <ul>
      <% resource.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>
